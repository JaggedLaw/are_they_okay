<div class="container">
  <ul class="nav nav-tabs">
    <li><%= link_to "Home", root_path %></li>
    <!-- <li><%= link_to "Login", "#myModal", class: "", "data-toggle" => "modal"  %> </li> -->
    <li>
      <a class="" data-toggle="modal" data-target="#myModal">
        Login
      </a>
    </li>
    <!-- <li><%= link_to "Login", tumblr_login_path %></li> -->
    <li><%= link_to "Survey", survey_path(Question.first.id) %></li>
    <li><%= link_to "Logout", logout_path, method: :delete %></li>
    <li><%= link_to "View Results", results_path %></li>

  </ul>

  <div class="modal fade" id="myModal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <h3 class="panel-title">
            Would you like to sign in through your Tumblr account or continue as a guest?
          </h3>
        </div>
        <div class="modal-footer">
          <%= button_to "Login with Tumblr", tumblr_login_path, class: "btn btn-default" %>
          <%= button_to "Continue as Guest", login_path, class: "btn btn-default" %>
        </div>

      </div>
    </div>
  </div>

  <script>
    $(document).ready(function(){
      function show_modal() {
        $('#myModal').modal('show');
      }
    });
  </script>
</div>
